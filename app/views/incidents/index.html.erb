<%# :page_title = "Incidents" %>

<h2>Incidents</h2>

<p><%= pluralize(@incidents.size, 'incident') %> open</p>

<table>
  <tr>
    <th>ID</th>
    <th>Title</th>
    <th>Source</th>
    <th>Severity</th>
    <th>Incident Manager</th>
    <th>Impact</th>
    <th>Platform</th>
    <th>CS Status</th>
    <th>Tech Status</th>
    <th>Update Due</th>
    <th>Callout</th>
    <th>Created At</th>
    <th>Updated At</th>
    <th>Actions</th>
  </tr>
  <tr>
  <% @incidents.each do |incident| %>
    <td><%= incident.id %></td>
    <td><%= incident.title %></td>
    <td><%= incident.source %></td>
    <td><%= incident.severity %></td>
    <td><%= incident.incident_manager %></td>
    <td><%= incident.impact %></td>
    <td><%= incident.platform %></td>
    <td><%= incident.cs_status ? 'Closed' : 'Open' %></td>
    <td><%= incident.tech_status ? 'Closed' : 'Open' %></td>
    <td><%= incident.update_due %></td>
    <td><%= incident.callout ? 'Yes' : 'No' %></td>
    <td><%= incident.created_at %></td>
    <td><%= incident.updated_at %></td>
    <td><%= link_to("Show", {:action => 'show', :id => incident.id}) %>
        <%= link_to("Update", {:action => 'edit', :id => incident.id}) %>
    </td>
  </tr>
  <% end %>
</table>
